{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSameLine": false,
    "htmlWhitespaceSensitivity": "strict",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "bracketSameLine": false,
                "htmlWhitespaceSensitivity": "strict"
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "parser": "css",
                "bracketSameLine": false,
                "singleQuote": true,
                "trailingComma": "es5"
            }
        }
    ]
}
